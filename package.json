{
  "name": "wdio-ts-mocha-auto",
  "version": "1.0.0",
  "description": "WebdriverIO TypeScript automation framework with Page Object Model",
  "main": "index.js",
  "scripts": {
    "test": "wdio run wdio.conf.ts",
    "test:debug": "npx --node-arg=--inspect-brk wdio run wdio.conf.ts",
    "test:debug:tyro": "npx --node-arg=--inspect-brk wdio run wdio.conf.ts --spec=./test/specs/tyroInvoiceSubmit.spec.ts",
    "test:headless": "HEADLESS=true wdio run wdio.conf.ts",
    "test:report": "npm test && npm run report:allure",
    "clean": "npm run clean:all",
    "clean:all": "powershell -Command \"if (Test-Path test-output) { Remove-Item -Recurse -Force test-output }\"",
    "clean:screenshots": "powershell -Command \"if (Test-Path test-output/screenshots) { Remove-Item -Recurse -Force test-output/screenshots/* }\"",
    "clean:logs": "powershell -Command \"if (Test-Path test-output/logs) { Remove-Item -Recurse -Force test-output/logs/* }\"",
    "clean:allure": "powershell -Command \"if (Test-Path test-output/allure-results) { Remove-Item -Recurse -Force test-output/allure-results/* }; if (Test-Path test-output/reports) { Remove-Item -Recurse -Force test-output/reports/* }\"",
    "report:allure": "node scripts/generate-report.js",
    "report:allure:basic": "npx allure generate test-output/allure-results --clean -o test-output/reports/allure-report",
    "report:open": "npx allure open test-output/reports/allure-report/latest",
    "report:open:index": "start test-output/reports/allure-report/index.html",
    "build": "tsc --noEmit",
    "pretest": "npm run clean:allure",
    "allure:report": "allure generate allure-results --clean -o allure-report && allure open allure-report"
  },
  "keywords": [
    "webdriverio",
    "typescript",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.0.10",
    "@types/oracledb": "^6.6.1",
    "@types/xml2js": "^0.4.14",
    "@wdio/allure-reporter": "^9.16.2",
    "@wdio/cli": "^9.16.2",
    "@wdio/globals": "^9.16.2",
    "@wdio/local-runner": "^9.16.2",
    "@wdio/mocha-framework": "^9.16.2",
    "@wdio/selenium-standalone-service": "^8.14.0",
    "@wdio/spec-reporter": "^9.16.2",
    "@wdio/types": "^9.16.2",
    "allure-commandline": "^2.34.1",
    "allure-mocha": "^3.3.0",
    "chai": "^5.2.0",
    "dotenv": "^17.0.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "webdriverio": "^9.16.2",
    "xml2js": "^0.6.2"
  },
  "compilerOptions": {
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "dependencies": {
    "oracledb": "^6.8.0",
    "winston": "^3.17.0"
  }
}
